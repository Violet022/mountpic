<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mount_background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/galleryBtn"
        android:backgroundTint="@color/light_peach"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_marginTop="198dp"
        android:elevation="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/Gallery"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/dark_blue_1000"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/light_peach"
        android:elevation="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/Camera"
        android:textAlignment="center"
        android:textColor="@color/dark_blue_1000"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryBtn" />

    <Button
        android:id="@+id/cubeBtn"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/light_peach"
        android:elevation="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/cube"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/dark_blue_1000"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cameraBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>